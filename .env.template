# Database Configuration Template
# IMPORTANT: Copy this file to .env and fill in your actual database credentials
# DO NOT commit the .env file to version control!

# PostgreSQL Database Host (replace with your actual host)
DB_HOST=your-database-host.com

# PostgreSQL Database Port (replace with your actual port)
DB_PORT=5432

# Database Name (replace with your actual database name)
DB_NAME=your_database_name

# Database User (replace with your actual username)
DB_USER=your_username

# Database Password (replace with your actual password - keep this secret!)
DB_PASSWORD=your_secure_password

# SSL Mode for connection (recommend keeping as 'require' for security)
DB_SSLMODE=require

# Optional: Logging level
LOG_LEVEL=INFO
